{
	"name": "Code - OSS with X11/Wayland",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"BASE_IMAGE": "mcr.microsoft.com/devcontainers/typescript-node:16-bullseye", // Use `fedora:latest` to install from rpm.
			"VSCODE_DOWNLOAD_URL": "" // Copy from builds page.
			// Launch from Integrated Terminal with: env -i HOME="$HOME" DISPLAY="$DISPLAY" WAYLAND_DISPLAY="$WAYLAND_DISPLAY" $SHELL -lic code
		}
	},
	"remoteUser": "node",
	"overrideCommand": false,
	"privileged": true,
	"mounts": [
		{
			"source": "vscode-dev",
			"target": "/vscode-dev",
			"type": "volume"
		}
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"mutantdino.resourcemonitor"
			]
		}
	}
}
